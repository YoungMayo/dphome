@model IEnumerable<OrderMicroservice.Models.Order>

@{
    ViewData["Title"] = "Unpaid Orders";
}

<h1>Unpaid Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>User Email</th>
            <th>Movie Name</th>
            <th>Total Price</th>
            <th>Order Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.UserEmail</td>
                <td>@order.MovieName</td>
                <td>@order.TotalPrice</td>
                <td>@order.OrderDate</td>
                <td>
                    <form asp-action="Pay" method="post">
                        <input type="hidden" name="orderId" value="@order.Id" />
                        <button type="submit" class="btn btn-success">Pay</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" asp-controller="Home">Back to Home</a>
</div>
